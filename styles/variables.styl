// color
$bodyColor = #f5f5f5;
$partialColor = #fff;
$red = #f44336;
$deepRed = #e91c63;
$lightRed = #ff5722;
$blue = #03a9f4;
$deepBlue = #2196f3;
$lightBlue = #00bcd4;
$green = #4caf50;
$deepGreen = #009688;
$lightGreen = #8bc34a;
$black = #000;
$yellow = #FFEB3B;
$grey = lighten($black, 60%);
$lightGrey = lighten($black, 85%);
