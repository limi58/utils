.g-transparent {
  opacity: 0;
}
.g-pointer-noevent {
  pointer-events: none;
}
.g-hidden {
  display: none !important;
}
.g-smooth-scroll {
  -webkit-overflow-scrolling: touch;
}
.g-full {
  width: 100%;
}
.g-flex {
  display: flex;
}
.g-flex.row-center {
  justify-content: center;
}
.g-flex.col-center {
  align-items: center;
}
.g-flex.row-between {
  justify-content: space-between;
}
.g-flex .flex-1 {
  flex: 1;
}
.g-push-bg {
  cursor: pointer;
}
.g-push-bg:active {
  background-color: #ececec !important;
}
.g-push-bg-light {
  cursor: pointer;
}
.g-push-bg-light:active {
  background-color: #f5f5f5 !important;
}
.g-push-in {
  transition: all 0.2s;
  cursor: pointer;
}
.g-push-in:active {
  transform: scale(0.95);
}
.g-disabled,
.g-push:active {
  opacity: 0.7;
}
.g-rlt {
  position: relative;
}
.g-fixed-bottom {
  position: fixed;
  bottom: 0;
  width: 100%;
  max-width: 480px;
}
.g-fixed-center {
  position: fixed;
  left: 0;
  right: 0;
  top: 50%;
  margin: auto;
  transform: translateY(-50%);
}
