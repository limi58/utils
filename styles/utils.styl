.g-section{
  margin-bottom: 30px !important;
}

.g-section-lg{
  margin-bottom: 50px !important;
}

.g-section-sm{
  margin-bottom: 15px !important;
}

.g-abs{
  position: absolute;
}

.g-abs-center{
  position: absolute;
  right: 0;
  left: 0;
  margin-left: auto;
  margin-right: auto;
}

.g-rlt{
  position: relative;
}

.g-text-overflow{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.g-pointer{
  cursor: pointer;
}

.g-width-full{
  width: 100%;
}

.g-width-half{
  width: 50%;
}

.g-width-quarter{
  width: 25%;
}

.g-text-center{
  text-align: center;
}
.g-text-left{
  text-align: left;
}
.g-text-right{
  text-align: right;
}

.g-center-block{
  margin: 0 auto;
}

.g-push{
  background-color: #fff;
  &:active{
    background-color: #f5f5f5;
  }
}

.g-hidden{
  display: none;
}

.g-size1{
  font-size: $size1;
}
.g-size2{
  font-size: $size2;
}
.g-size3{
  font-size: $size3;
}
.g-size4{
  font-size: $size4;
}
.g-size5{
  font-size: $size5;
}
.g-size6{
  font-size: $size6;
}
